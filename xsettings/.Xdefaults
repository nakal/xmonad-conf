
! ******************** general settings ******************

*customization: -color

! ******************** xterm settings ********************

XTerm*renderFont: true
XTerm*faceName: Fantasque Sans Mono
XTerm*faceSize: 13
XTerm*locale: UTF-8
XTerm*dynamicColors: true
XTerm*saveLines: 1024
XTerm*background: black
XTerm*foreground: darkgray
XTerm*metaSendsEscape: true
XTerm*scrollBar: false
XTerm*charClass: 33:48,36-38:48,43-47:48,58:48,61:48,63-64:48,126:48
XTerm*cursorColor: orange
XTerm*cursorBlink: true

! ******************** urxvt settings ********************

urxvt*font: xft:Fantasque Sans Mono:pixelsize=17
urxvt*locale: UTF-8
urxvt*dynamicColors: true
urxvt*saveLines: 1024
urxvt*background: black
urxvt*foreground: darkgray
urxvt*metaSendsEscape: true
urxvt*scrollBar: false
urxvt*letterSpace: -1
urxvt*iso14755: false
urxvt*cursorColor: orange
urxvt*termName: rxvt-unicode-256color
urxvt*perl-ext-common: default,matcher
urxvt*perl-ext: -confirm-paste
urxvt*url-launcher: xdg-open
urxvt*matcher.button: 2
urxvt*urgentOnBell: true
urxvt*cursorBlink: true
urxvt*disablePasteBrackets: true

rxvt*font: xft:Fantasque Sans Mono:pixelsize=17
rxvt*locale: UTF-8
rxvt*dynamicColors: true
rxvt*saveLines: 1024
rxvt*background: black
rxvt*foreground: darkgray
rxvt*metaSendsEscape: true
rxvt*scrollBar: false
rxvt*letterSpace: -1
rxvt*iso14755: false
rxvt*cursorColor: orange
rxvt*termName: rxvt-unicode-256color
urxvt*perl-ext-common: default,matcher
urxvt*perl-ext: -confirm-paste
rxvt*url-launcher: xdg-open
rxvt*matcher.button: 2
rxvt*urgentOnBell: true
rxvt*cursorBlink: true
rxvt*disablePasteBrackets: true
